            <hr class="noscreen" />
            
            <div id="content-in">

<% IF session.user %>
  <form action="<% add_entry_url %>" method=post class=add-entry>
    <dl>
      <dt>Title:
      <dd><input type=text size=30 name=title>
      <dt>Text:
      <dd><textarea name=text rows=5 cols=40></textarea>
      <dd><input type=submit value=Share>
    </dl>
  </form>
<% END %>
<ul class=entries>
<% IF entries.size %>
  <% FOREACH id IN entries.keys.nsort %>
    <li><h2><% entries.$id.title %> (from: <% entries.$id.datum %>)</h2><% entries.$id.text %><br/>Author: <% entries.$id.author %><%IF session.user %>. Actions: <a href="<%edit_url%>/<%entries.$id.id%>">Edit</a> / <a href="<%delete_url%>/<%entries.$id.id%>">Delete</a> / <a href="<%comment_url%>/<%entries.$id.id%>">Comment</a> <%END%> <h3> Comments </h3><dl>
  <% FOREACH id2 in comments.keys.nsort %>
  <% IF id == comments.$id2.article_id %>
    <dd> <b><%comments.$id2.title%></b><br /><%comments.$id2.text%> from <%comments.$id2.author%>. <%IF session.user %>Actions: <a href="<%edit_comment_url%>/<%comments.$id2.id%>">Edit</a> / <a href="<%delete_comment_url%>/<%comments.$id2.id%>">Delete</a> <%END %>
  <% END %>
  <% END %>
  </dl>
  <% END %>
<% ELSE %>
  <li><em>Unbelievable.  No entries here so far</em>
<% END %>
</ul>

<% IF not session.user %>
      <a href="<% login_url %>">log in</a>
    <% ELSE %>
      <a href="<% logout_url %>">log out (<%session.user%>)</a>
    <% END %>
    <% IF msg %>
    <% msg %>
    <% END %>
            </div> <!-- /content-in -->
               
